@model IEnumerable<VirtualHosp.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h1>Lista de pacientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span>
        Agregar paciente
    </a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDocumento)
            </th>
            <th width="30%"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td style="text-align:right">
                <a asp-route-id="@item.Id" asp-action="Details" class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span></a>
                <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
                <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
