@model VirtualHosp.Models.ConsultaRelations

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar médico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("AddMedicoSave", "Consultas"))
        {
            @Html.HiddenFor(m => m.ConsultaId)
            <div class="form-group">
            @Html.DropDownList("MedicoId", new SelectList(ViewBag.Medicos, "Id", "NombreCompleto"), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Volver</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
